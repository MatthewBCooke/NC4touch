/********************************************************************************
 * nc4_ili9488_swcs.dts
 *
 * Device Tree Overlay for two ILI9488 panels on Raspberry Pi's SPI0 bus,
 * with software-based chip select lines:
 *   - LCD_0 on GPIO 8 (Pin 24)
 *   - LCD_1 on GPIO 7 (Pin 26)
 * 
 *  => No "reg = <0>/<1>" usage, so the hardware SPI controller won't drive CE0/CE1.
 *     Instead, each node has "cs-gpios" to handle toggling in software.
 *
 * Based on your original nc4_ili9488.dts
 *
 * Compatible usage:
 *   dtoverlay=nc4_ili9488_swcs
 ********************************************************************************/
 /dts-v1/;
/plugin/;

/ {
	compatible = "brcm,bcm2835";

	/****************************************************************************
	 * Fragment 0: Enable SPI0 hardware
	 ****************************************************************************/
	fragment@0 {
		target = <&spi0>;
		__overlay__ {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
		};
	};

	/****************************************************************************
	 * Fragment 1: Disable spidev0
	 ****************************************************************************/
	fragment@1 {
		target = <&spidev0>;
		__overlay__ {
			status = "disabled";
		};
	};

	/****************************************************************************
	 * Fragment 2: Disable spidev1
	 ****************************************************************************/
	fragment@2 {
		target = <&spidev1>;
		__overlay__ {
			status = "disabled";
		};
	};

	/****************************************************************************
	 * Fragment 3: GPIO pins for LCD_0 (RESET/DC/backlight)
	 *   GPIO24 = RESET,  GPIO25 = DC,  GPIO18 = shared backlight
	 ****************************************************************************/
	fragment@3 {
		target = <&gpio>;
		__overlay__ {
			pitft0_pins: pitft0_pins {
				brcm,pins = <24 25 18>;
				brcm,function = <1 1 1>; /* all outputs */
			};
		};
	};

	/****************************************************************************
	 * Fragment 4: GPIO pins for LCD_1 (RESET/DC/backlight)
	 *   GPIO23 = RESET,  GPIO27 = DC,  GPIO18 = shared backlight
	 ****************************************************************************/
	fragment@4 {
		target = <&gpio>;
		__overlay__ {
			pitft1_pins: pitft1_pins {
				brcm,pins = <23 27 18>;
				brcm,function = <1 1 1>;
			};
		};
	};

	/****************************************************************************
	 * Fragment 5: FIRST ILI9488 device node => software CS on GPIO8
	 ****************************************************************************/
	fragment@5 {
		target = <&spi0>;
		__overlay__ {
			pitft0: pitft0@0 {
				compatible = "ili9488";

				/* Instead of reg=<0>, we do a software chip select on GPIO8. */
				cs-gpios = <&gpio 8 0>;  /* "0" => active-low */

				/* Optionally specify SPI mode. 0 => CPOL=0, 0 => CPHA=0 */
				spi-cpol = <0>;
				spi-cpha = <0>;
				spi-max-frequency = <4000000>;

				pinctrl-names = "default";
				pinctrl-0 = <&pitft0_pins>;

				rotation = <0>;
				reset-gpios = <&gpio 24 0>;
				dc-gpios = <&gpio 25 0>;
				backlight = <&backlight>;
			};
		};
	};

	/****************************************************************************
	 * Fragment 6: SECOND ILI9488 device node => software CS on GPIO7
	 ****************************************************************************/
	fragment@6 {
		target = <&spi0>;
		__overlay__ {
			pitft1: pitft1@1 {
				compatible = "ili9488";

				/* Instead of reg=<1>, we do software chip select on GPIO7. */
				cs-gpios = <&gpio 7 0>;

				spi-cpol = <0>;
				spi-cpha = <0>;
				spi-max-frequency = <4000000>;

				pinctrl-names = "default";
				pinctrl-0 = <&pitft1_pins>;

				rotation = <0>;
				reset-gpios = <&gpio 23 0>;
				dc-gpios = <&gpio 27 0>;
				backlight = <&backlight>;
			};
		};
	};

	/****************************************************************************
	 * Fragment 7: Shared backlight on GPIO18
	 ****************************************************************************/
	fragment@7 {
		target-path = "/soc";
		__overlay__ {
			backlight: backlight {
				compatible = "gpio-backlight";
				gpios = <&gpio 18 0>;
			};
		};
	};

	/****************************************************************************
	 * Overridable parameters for speed and rotation
	 ****************************************************************************/
	__overrides__ {
		speed = <&pitft0>,"spi-max-frequency:0", <&pitft1>,"spi-max-frequency:0";
		rotation = <&pitft0>,"rotation:0", <&pitft1>,"rotation:0";
	};
};
